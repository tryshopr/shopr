- @page_title = "#{t('shopr.orders.edit_order')} ##{@order.number}"

= content_for :header do
  %p.buttons
    = link_to t('shopr.orders.back_to_order'), @order, :class => 'button grey'
  %h2.orders "#{t('shopr.orders.edit_order')} <b>##{@order.number}</b>"

= form_for @order, :html => {:class => 'orderForm'} do |f|
  = f.error_messages
  = render 'form', :f => f

  = field_set_tag  t('shopr.orders.notes') do
    %dl
      %dd= f.text_area :notes, :class => 'text'

  = field_set_tag t('shopr.orders.ordered_products'), :class => 'padded' do
    = render 'order_items_form', :f => f

  %p.submit
    = f.submit t('shopr.orders.save_order') , :class => 'button green'
    = link_to t('shopr.cancel'), @order, :class => 'button'
