- @page_title = t(:settings_title)

= content_for :header do
  %h2.settings= t(:settings_title)

= form_tag :url => settings_path do |f|

  - Shoppe.settings_groups.each do |group, fields|
    = field_set_tag t(group) do
      - fields.each do |f|
        %dl.sided
          %dt= settings_label f
          %dd
            = settings_field f
            - if v = t("settings.help")[f]
              %p.help= v
        
  %p.submit.sided
    = submit_tag t(:save_settings), :class => 'button green'
