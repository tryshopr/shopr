- @page_title = 'Orders'

= content_for :header do
  %p.buttons
    = link_to t("shoppe.new_order"), :new_order, :class => 'button green'
    = link_to t("shoppe.search_orders"), '#', :class => 'button', :rel => 'searchOrders'
  %h2.orders
    Orders
    %span= page_entries_info @orders

= render 'search_form'

.table
  %table.data
    %thead
      %tr
        %th= t("shoppe.number")
        %th= t("shoppe.customer")
        %th= t("shoppe.status")
        %th= t("shoppe.products")
        %th= t("shoppe.total")
        %th= t("shoppe.payment")
    %tbody
      - if @orders.empty?
        %tr.empty
          %td{:colspan => 6}= t("shoppe.no_orders")
      - else
        - for order in @orders
          %tr
            %td= link_to order.number, order
            %td= order.customer_name
            %td= status_tag order.status
            %td
              %ul
                - for item in order.order_items
                  %li #{item.quantity} x #{item.ordered_item.full_name}
            %td= number_to_currency order.total
            %td= boolean_tag order.paid_in_full?, nil, :true_text => number_to_currency(order.amount_paid), :false_text => number_to_currency(order.amount_paid)
= paginate @orders