- @page_title = t(:products)
= content_for :header do
  %p.buttons
    = link_to t(:variants), [@product, :variants], :class => 'button'
    = link_to t(:stock_levels), stock_level_adjustments_path(:item_id => @product.id, :item_type => @product.class), :class => 'button', :rel => 'dialog', :data => {:dialog_width => 700, :dialog_behavior => 'stockLevelAdjustments'}
    = link_to t(:products_back), :products, :class => 'button'
  %h2.products= t(:products)
= render 'form'